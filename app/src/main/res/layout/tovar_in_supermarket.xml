<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="18dp"
        android:layout_margin="8dp"
        android:elevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_tovar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_background"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="11dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="230 ₽  "
                    android:textSize="12dp"
                    android:id="@+id/price"
                    android:fontFamily="@font/labgrotesque_medium"
                    android:textColor="#FF8D28"/>
                <ImageView
                    android:layout_width="3dp"
                    android:layout_height="3dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_launcher_background"/>
                <TextView
                    android:id="@+id/mass"
                    android:fontFamily="@font/labgrotesque_medium"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  250 г"/>
            </LinearLayout>
            <TextView
                android:layout_weight="1"
                android:id="@+id/name"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/labgrotesque_medium"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Омлет со страчетеллой и трбфелем"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="3">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@drawable/basket_icon_white"
                    android:text="В корзину"

                    android:textColor="@color/white"
                    android:paddingLeft="23dp"
                    android:textSize="10dp"
                    android:paddingRight="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/corners_btn_in_korzina"
                    android:layout_marginTop="0dp"
                    android:layout_marginHorizontal="14dp"
                    android:fontFamily="@font/labgrotesque_medium" />
            </LinearLayout>




        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>